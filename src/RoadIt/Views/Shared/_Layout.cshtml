            }           
        }

        function showTable4()
        {
            if(toggle4 == 0)
            {
                $("#tableRow4").removeClass("hide");
                toggle4 = 1;
            }
            else
            {
                $("#tableRow4").addClass("hide");
                toggle4 = 0;
            }           
        }

        function showTable5()
        {
            if(toggle5 == 0)
            {
                $("#tableRow5").removeClass("hide");
                toggle5 = 1;
            }
            else
            {
                $("#tableRow5").addClass("hide");
                toggle5 = 0;
            }           
        }

        function showTable6()
        {
            if(toggle6 == 0)
            {
                $("#tableRow6").removeClass("hide");
