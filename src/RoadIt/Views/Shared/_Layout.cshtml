            }
            else
            {
                $("#tableRow6").addClass("hide");
                toggle6 = 0;
            }           
        }

        function showTable7()
        {
            if(toggle7 == 0)
            {
                $("#tableRow7").removeClass("hide");
                toggle7 = 1;
            }
            else
            {
                $("#tableRow7").addClass("hide");
                toggle7 = 0;
            }           
        }

        $('#cmd').click(function () 
        {
            html2canvas(document.getElementById('jspdf'), 
            {
                onrendered: function (canvas) 
                {
                    var data = canvas.toDataURL();
                    var docDefinition = 
                    {
                        content: [{
                            image: data,
                            width: 250,
                        }]
                    };
                    pdfMake.createPdf(docDefinition).download("Repport.pdf");
                }
            });
        });
    </script>
</body>
</html>
